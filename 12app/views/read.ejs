<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <!-- Tailwind CSS CDN -->
        <script src="https://cdn.tailwindcss.com"></script>

    </head>
    <body>
        
        
        <div class = " w-full h-full bg-zinc-900  p-10 text-white">
             <a href="/" class="text-blue-500">Back to home </a>
            <h1 class="text-3xl mt-10 tracking-tighter mb-3">Create user</h1>
           <div class="users flex gap-3 flex-wrap">
            <% if(users.length>0 ){ %>
                  <% users.forEach(function(user){ %>
                     <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-500">
                        <img class="w-full h-full object-cover" src="<%= user.image  %>" alt="">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"> <%= user.name %> </h3>
                    <h5 class="text-zinc-500"> <%= user.email %> </h5>
                    <div class="flex gap-3">
                        <a class="text-zinc-600" href="/edit/<%= user._id %>">Edit user</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
                    </div>
                </div>
               <% }) %>
           <% }else{ %>
                <h3 class="text-zinc-500">NO user yet!!!</h3>
           <% } %>
             
           </div>
        </div>
        <script src="/javascripts/script.js" async defer></script>
    </body>
</html>